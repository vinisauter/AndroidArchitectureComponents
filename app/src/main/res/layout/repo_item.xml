<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.vas.architecture.github.repositories.objects.Repo" />

        <variable
            name="adapterEvent"
            type="com.vas.architecture.github.repositories.presentation.components.RepoAdapter.AdapterEvent" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#2D3035"
        android:onClick="@{() -> adapterEvent.onItemClicked(item)}"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@{item.imageUrl}"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:textColor="#EFF0F4"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@{item.name}" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#EFF0F4"
                android:textSize="12sp"
                tools:text="@{item.description}" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@{item.score}"
                android:textColor="#EFF0F4"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</layout>